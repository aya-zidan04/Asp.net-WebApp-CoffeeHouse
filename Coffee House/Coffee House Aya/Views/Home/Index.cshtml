@{
    ViewData["Title"] = "Home Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #f9f4f1 0%, #fffefb 50%, #f5f0e8 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .hero-section {
        background: linear-gradient(rgba(123, 75, 42, 0.7), rgba(92, 58, 33, 0.8)), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 300"><defs><pattern id="coffee-beans" x="0" y="0" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="15" cy="15" r="3" fill="%23d4a574" opacity="0.3"/><circle cx="35" cy="35" r="2" fill="%23c19660" opacity="0.2"/></pattern></defs><rect width="100%" height="100%" fill="url(%23coffee-beans)"/></svg>') center/cover;
        color: white;
        padding: 120px 0;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 2rem;
        padding: 3rem;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 8px 40px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
        }

    .btn-coffee {
        background: linear-gradient(45deg, #d4a574, #c19660);
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(196, 150, 96, 0.4);
        text-decoration: none;
        display: inline-block;
    }

        .btn-coffee:hover {
            background: linear-gradient(45deg, #c19660, #a67c4a);
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(196, 150, 96, 0.6);
            color: white;
        }

    .feature-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 1.5rem;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(92, 58, 33, 0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(212, 165, 116, 0.2);
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 40px rgba(92, 58, 33, 0.15);
        }

    .feature-icon {
        font-size: 3rem;
        color: #d4a574;
        margin-bottom: 1.5rem;
        display: block;
        transition: transform 0.3s ease;
    }

    .feature-card:hover .feature-icon {
        transform: scale(1.1);
    }

    .section-title {
        color: #5c3a21;
        font-weight: 700;
        margin-bottom: 3rem;
        position: relative;
    }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(45deg, #d4a574, #c19660);
            border-radius: 2px;
        }

    .stats-section {
        background: rgba(255, 255, 255, 0.6);
        border-radius: 2rem;
        padding: 3rem;
        margin: 4rem 0;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .stat-item {
        text-align: center;
        color: #5c3a21;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #d4a574;
        display: block;
    }

    .cta-section {
        background: linear-gradient(135deg, #5c3a21, #7b4b2a);
        color: white;
        padding: 4rem 0;
        margin-top: 5rem;
    }

    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .floating-bean {
        position: absolute;
        width: 20px;
        height: 20px;
        background: rgba(212, 165, 116, 0.3);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

        .floating-bean:nth-child(1) {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-bean:nth-child(2) {
            top: 60%;
            left: 85%;
            animation-delay: 2s;
        }

        .floating-bean:nth-child(3) {
            top: 80%;
            left: 20%;
            animation-delay: 4s;
        }

    keyframes float {
        0%, 100%

    {
        transform: translateY(0px) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
    }

    }

    .welcome-text {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .subtitle {
        font-size: 1.4rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }

    media (max-width: 768px) {
        .welcome-text

    {
        font-size: 2.5rem;
    }

    .hero-section {
        padding: 80px 0;
    }

    .glass-card {
        padding: 2rem;
    }

    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="floating-elements">
        <div class="floating-bean"></div>
        <div class="floating-bean"></div>
        <div class="floating-bean"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="glass-card text-center hero-content">
                    <h1 class="welcome-text">Welcome to Aya Coffee House</h1>
                    <p class="subtitle">Where every cup tells a story and every moment becomes a memory</p>
                    <div class="mt-4">
                        <a href="/Menus" class="btn-coffee me-3">
                            <i class="bi bi-cup-hot-fill me-2"></i>Explore Menu
                        </a>
                        <a href="#features" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-arrow-down me-2"></i>Discover More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="section-title text-center display-5">Why Choose Our Coffee House?</h2>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-cup-hot-fill feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Premium Coffee</h4>
                    <p style="color: #7b4b2a;">Carefully selected beans from the finest coffee regions, roasted to perfection for an exceptional taste experience.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-heart-fill feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Perfect Pairings</h4>
                    <p style="color: #7b4b2a;">Expertly curated combinations of coffee and sweets that complement each other beautifully.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-house-heart-fill feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Cozy Atmosphere</h4>
                    <p style="color: #7b4b2a;">A warm, welcoming environment perfect for relaxation, work, or catching up with friends.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-people-fill feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Expert Baristas</h4>
                    <p style="color: #7b4b2a;">Our skilled team is passionate about coffee and dedicated to creating your perfect cup every time.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-clock-fill feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Fresh Daily</h4>
                    <p style="color: #7b4b2a;">Everything is prepared fresh daily, from our artisanal pastries to our signature coffee blends.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card">
                    <i class="bi bi-wifi feature-icon"></i>
                    <h4 class="mb-3" style="color: #5c3a21;">Modern Amenities</h4>
                    <p style="color: #7b4b2a;">Free WiFi, comfortable seating, and charging stations make us perfect for work or leisure.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5">
    <div class="container">
        <div class="stats-section">
            <div class="row text-center">
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <span class="stat-number">500+</span>
                        <span class="h5">Happy Customers</span>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <span class="stat-number">50+</span>
                        <span class="h5">Coffee Varieties</span>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <span class="stat-number">25+</span>
                        <span class="h5">Sweet Treats</span>
                    </div>
                </div>
                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-item">
                        <span class="stat-number">5</span>
                        <span class="h5">Years of Excellence</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="container text-center">
        <h2 class="display-5 mb-4">Ready for Your Perfect Cup?</h2>
        <p class="lead mb-4">Join us today and discover why we're the neighborhood's favorite coffee destination.</p>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <a href="/Menus" class="btn btn-light btn-lg me-3 mb-3">
                    <i class="bi bi-cup-hot me-2"></i>View Our Menu
                </a>
                <a href="#" class="btn btn-outline-light btn-lg mb-3">
                    <i class="bi bi-geo-alt me-2"></i>Find Us
                </a>
            </div>
        </div>
    </div>
</section>