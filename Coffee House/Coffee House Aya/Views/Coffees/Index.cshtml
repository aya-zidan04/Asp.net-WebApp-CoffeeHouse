@model IEnumerable<Coffee_House_Aya.Models.Coffee>

@{
    ViewData["Title"] = "Coffee";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .coffee-header {
        color: #5c3a21;
        font-weight: bold;
        font-size: 2rem;
    }

    .card-coffee {
        background-color: #fffdf7;
        border-radius: 1.5rem;
        box-shadow: 0 8px 20px rgba(90, 60, 30, 0.1);
        transition: transform 0.3s ease;
    }

        .card-coffee:hover {
            transform: scale(1.02);
        }

    .btn-coffee {
        background-color: #7b4b2a;
        color: white;
    }

        .btn-coffee:hover {
            background-color: #5c3a21;
        }

    .btn-cream {
        background-color: #d6bfa9;
        color: #3a2415;
    }

        .btn-cream:hover {
            background-color: #bda58b;
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 1.5rem;
        border-top-right-radius: 1.5rem;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="coffee-header">
            <i class="bi bi-cup-hot me-2"></i>Coffee Menu
        </h2>
        <a asp-action="Create" class="btn btn-coffee rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-1"></i>Create New
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card card-coffee h-100">
                    <img src="~/images/Coffee/@item.UImage" class="card-img-top" alt="@item.CofffeName">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@item.CofffeName</h5>
                        <p class="text-muted mb-1"><strong>Type:</strong> @item.Type</p>
                        <p class="text-muted mb-1"><strong>Price:</strong> $@item.Price</p>
                        <p class="card-text mt-2">@item.Description</p>
                        <div class="mt-auto d-flex flex-wrap gap-2">
                           <!-- <a asp-action="Edit" asp-route-id="@item.CoffeeId" class="btn btn-sm btn-cream rounded-pill">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.CoffeeId" class="btn btn-sm btn-warning text-white rounded-pill">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.CoffeeId" class="btn btn-sm btn-danger rounded-pill">
                                <i class="bi bi-trash me-1"></i>Delete
                             </a>-->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
