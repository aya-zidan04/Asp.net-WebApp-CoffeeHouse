<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/dashboard.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #1f1f1f;
            color: #fff;
            min-height: 100vh;
            box-shadow: 3px 0 8px rgba(0,0,0,0.15);
        }

            .sidebar .nav-link {
                color: #bbb;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #343a40;
                }

                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: #0d6efd;
                }

        .navbar {
            background-color: #1f1f1f;
        }

            .navbar .navbar-brand {
                color: #fff;
            }

            .navbar .nav-link {
                color: #ccc;
            }

        .main-title {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <header class="navbar navbar-dark sticky-top shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/">AdminPanel</a>
        <button class="navbar-toggler d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="/Users/Login">Logout</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                
                        <br />
                        <br />
                        <br />
                        <br />
                        <!-- Custom Menu Links -->
                        <li class="nav-item mt-3">
                            <a class="nav-link" href="/Coffees">
                                <span data-feather="coffee"></span> Coffee
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Sweets">
                                <span data-feather="gift"></span> Sweets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Menus">
                                <span data-feather="clipboard"></span> Menu
                            </a>
                        </li>

                        <!-- Admin Management -->
                        <li class="nav-item mt-3">
                            <a class="nav-link" href="/Users">
                                <span data-feather="user"></span> Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Roles">
                                <span data-feather="shield"></span> Roles
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                    <h1 class="main-title h3">@ViewData["title"]</h1>
                    <div class="btn-group">
                        <button class="btn btn-sm btn-outline-secondary">Share</button>
                        <button class="btn btn-sm btn-outline-secondary">Export</button>
                    </div>
                </div>

                @RenderBody()

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
    <script>
        feather.replace()
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
